#!/bin/sh
gcc -Werror -Wall -Wextra main.c sample_validity/*.c backtracking/*.c output/*.c -I ../includes/ -o fillit
echo "====> VALID OUTPUT <======"
./fillit ../test_samples/valid_sample.fillit
#time ./fillit ./test_samples/valid_sample.fillit
#echo "====> HARDCORE VALID OUTPUT <======"
#./fillit ../test_samples/hardcore_valid_sample.fillit
#time ./fillit ./test_samples/valid_sample.fillit
echo "====> INVALID OUTPUT <===="
./fillit ../test_samples/invalid_sample.fillit
#time ./fillit ./test_samples/invalid_sample.fillit
echo "====> INV1 OUTPUT <======="
./fillit ../test_samples/inv1.fillit
#time ./fillit ./test_samples/inv1.fillit
echo "====> INV2 OUTPUT <======="
./fillit ../test_samples/inv2.fillit
#time ./fillit ./test_samples/inv2.fillit
echo "====> INV3 OUTPUT <======="
./fillit ../test_samples/inv3.fillit
#time ./fillit ./test_samples/inv3.fillit
rm -f fillit
